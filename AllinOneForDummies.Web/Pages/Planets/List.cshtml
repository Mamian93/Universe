@page
@model AllinOneForDummies.Web.Pages.Planets.ListModel
@{
    ViewData["Title"] = "Planets";
}

<h2>Planets</h2>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control"
                   asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

@foreach (var planet in Model.Planets)
{
    <partial name="_Summary" model="planet" />

}

<a asp-page="./Edit" class="btn btn-primary">Add planet</a>

